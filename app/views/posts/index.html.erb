<%= render 'users/user', user: @user %>

<% @posts.each do |post| %>
<div class="m-5">
<div class="card mb-3">
    <div class="card-body">
    <h5>Post <%= post.id%></h5>
    <h3 class="pt-2"><%=post.title%></h3>
    <p><%= post.text %></p>
    <h5 class="text-end">Comments: <%=post.comments_counter%>  Likes: <%=post.likes_counter%></h5>
    </div>
    </div>

    <div class="card">
    <div class="card-body">
    <h5 class="mb-2">Recent Comments</h5>
    <% post.five_recent_comments.each do |comment| %>
        <p class="card-text"> <strong><%= comment.author.name %></strong>: <%= comment.text %></p>
    <% end %>
    </div>
</div>
</div>
<% end %>
