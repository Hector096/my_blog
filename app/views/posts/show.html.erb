
<div class="m-5">
<div class="card mb-3">
  <div class="card-body">
    <div class="post-show-line">
    <h2 class="card-title"><%= @post.title %></h2> by <span><%= @post.author.name %></span>
      <p class="card-text">Comments: <small class="text-muted"><%= @post.comments_counter%></small>, Likes: <small class="text-muted"><%= @post.likes_counter%></small></p>
    </div>
    <p class="card-text"><%= @post.text%></p>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% @post.comments.each do |comment| %>
    <p><%= comment.author.name %>: <%= comment.text %></p> 
    <% end %>
  </div>
</div>
</div>