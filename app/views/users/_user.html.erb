<div class="m-5">
<div class="card mb-4 p-3">
  <%= link_to user_path(user.id) do %>
    <div class="row g-5">
      <div class="col-md-2 card-img">
        <%= image_tag user.photo, alt: "User's photo", :class => "img-fluid rounded-start" %>
      </div>
      <div class="col-md-8">
        <div class="card-body ms-5">
          <h2 class="card-title text-dark display-1"><%= user.name %></h2> 
          <h4 class="card-text text-dark text-end pt-2 display-6">Number of posts: <%= user.posts_counter %></h4>
        </div>
      </div>  
    </div>
  <% end %> 
</div></div>